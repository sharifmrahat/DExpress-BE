// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String?
  role Role @default(customer)
  contactNo String?
  addresses String[]
  imageUrl String?

  bookings Booking[]
  payments Payment[]
  bookingLogs BookingLog[]
  reviews Review[]
  feedback Feedback?
  articles Article[]

  currentOtp String?
  isVerified Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("users")
}

model Service {
  id String @id @default(uuid())
  title String @unique
  imageUrl String?
  description String?

  packages Package[]
  bookings Booking[]

  totalBooking Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)
  @@map("services")
}

model Package {
  id String @id @default(uuid())
  title String @unique
  price Int
  imageUrl String?
  description String?

  serviceId String
  service Service @relation(fields: [serviceId], references: [id])

  bookings Booking[]

  totalBooking Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("packages")
}

model Booking {
  id String @unique @default(uuid())
  bkId String @unique

  bookingType BookingType @default(Package)

  userId String
  user User @relation(fields: [userId], references: [id])

  serviceId String
  service Service @relation(fields: [serviceId], references: [id])

  packageId String?
  package Package? @relation(fields: [packageId], references: [id])

  deliveryDate DateTime

  shippingAddress String
  billingAddress String

  totalCost Int @default(0)

  remarks String?
  
  paymentMethod PaymentMethod @default(COD)
  paymentStatus PaymentStatus @default(Unpaid)

  status BookingStatus @default(Created)

  review Review?

  bookingLogs BookingLog[]

  payments Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("bookings")
}

model BookingLog {
  id String @unique @default(uuid())

  bookingId String
  booking Booking @relation(fields: [bookingId], references: [id])

  currentStatus BookingStatus

  updatedById String
  updatedBy User @relation(fields: [updatedById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("bookingLogs")
}

model Payment {
  id String @unique @default(uuid())

  userId String
  user User @relation(fields: [userId], references: [id])

  bookingId String
  booking Booking @relation(fields: [bookingId], references: [id])

  paymentMethod PaymentMethod @default(COD)

  totalAmount Int @default(0)

  transactionId String?

  provider String?

  status PaymentStatus @default(Unpaid)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("payments")
}

model Review {
  id String @unique @default(uuid())
  description String
  rating Float 
  imageUrls String[]

  userId String
  user User @relation(fields: [userId], references: [id])

  bookingId String @unique
  booking Booking @relation(fields: [bookingId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@id([userId, bookingId]) 
  @@map("reviews")
}

model Feedback {
  id String @unique @default(uuid()) 
  subject String 
  message String
  attachments String[]

  userId String @unique
  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("feedbacks")
}

model Article {
  id String @unique @default(uuid()) 
  title String 
  thumbnail String?
  description String

  status ArticleStatus @default(Draft)

  userId String
  user User @relation(fields: [userId], references: [id])

  totalReading Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("articles")
}

enum Role {
  customer
  admin
  super_admin
}

enum BookingType {
  Package
  Custom
}

enum BookingStatus {
  Drafted
  Created
  Confirmed
  Cancelled
  Reverted
  Shipped
  Delivered
}

enum PaymentMethod {
 COD
 Stripe
 SSLCommerze
}

enum PaymentStatus {
 Unpaid
 Partial_Paid
 Paid
}

enum ArticleStatus {
 Draft
 Published
 Archived
}