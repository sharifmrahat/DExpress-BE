// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String?
  role Role @default(customer)
  contactNo String?
  addresses String[]
  imageUrl String?

  bookings Booking[]
  bookingLogs BookingLog[]
  reviews Review[]
  feedback Feedback?
  articles Article[]

  currentOtp String?
  isVerified Boolean @default(false)

  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("users")
}

model Service {
  id String @id @default(uuid())
  title String
  imageUrl String?
  description String?

  packages Package[]
  bookings Booking[]

  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)
  @@map("services")
}

model Package {
  id String @id @default(uuid())
  title String
  price Int
  imageUrl String?
  description String?

  serviceId String?
  service Service? @relation(fields: [serviceId], references: [id])

  bookings Booking[]

  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("packages")
}


model Booking {
  id String @unique @default(uuid())
  bkId String? @unique

  bookingType BookingType @default(Package)

  userId String
  user User @relation(fields: [userId], references: [id])

  serviceId String
  service Service @relation(fields: [serviceId], references: [id])

  packageId String?
  package Package? @relation(fields: [packageId], references: [id])

  departureDate DateTime
  deliveryDate DateTime

  pickingAddress String?
  shippingAddress String

  totalCost Int @default(0)

  remarks String?
  
  paymentMethod PaymentMethod @default(COD)
  paymentStatus PaymentStatus @default(Unpaid)
  transactionId String?

  status BookingStatus @default(Processing)

  review Review?

  bookingLogs BookingLog[]

  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("bookings")
}

model BookingLog {
  id String @unique @default(uuid())

  userId String
  user User @relation(fields: [userId], references: [id])

  bookingId String
  booking Booking @relation(fields: [bookingId], references: [id])

  currentStatus BookingStatus

  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("bookingLogs")
}


model Review {
  id String @unique @default(uuid())
  description String
  rating Float 
  imageUrls String[]

  userId String
  user User @relation(fields: [userId], references: [id])

  bookingId String @unique
  booking Booking @relation(fields: [bookingId], references: [id])

  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@id([userId, bookingId]) 
  @@map("reviews")
}

model Feedback {
  id String @unique @default(uuid()) 
  subject String 
  message String
  attachments String[]

  userId String @unique
  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("feedbacks")
}

model Article {
  id String @unique @default(uuid()) 
  title String 
  thumbnail String?
  description String

  status ArticleStatus @default(Draft)

  userId String
  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  isActive Boolean @default(true)
  isDeleted Boolean @default(false)

  @@map("articles")
}

enum Role {
  customer
  admin
  super_admin
}

enum BookingType {
  Package
  Custom
}

enum BookingStatus {
  Processing
  Confirmed
  Cancelled
  In_Transit
  Shipped
}

enum PaymentMethod {
 COD
 Card
 Bank
}

enum PaymentStatus {
 Unpaid
 Paid
}

enum ArticleStatus {
 Draft
 Published
 Archived
}